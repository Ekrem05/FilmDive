{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch .NET Core (Server)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/server/bin/Debug/net8.0/FilmDive.Server.dll",
      "args": [],
      "cwd": "${workspaceFolder}/server",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/server/Views"
      },
      "justMyCode": true
    }
  ]
}
